<style type="text/css">
  tr.heading{
      background-color: silver;
      height: 45px;
      font-size: 25px;
  }
  tr{
      height: 40px;
      font-size: 22px;
  }
  td{
      padding-left: 20px;
  }
  td.count{
      text-align: center;
      cursor: pointer;
  }
</style>

<div style="width: 100%; border:solid black; border-width: 0px 0px 1px 0px;">
  <table style="width: 100%">
    <tr>
      <td style="width: 130px;text-align: center" rowspan="4">
        <img src="/images/baobab.png" style="height: 100px;width:100px;">
      </td>
      <td style="vertical-align: top; font-size: 25px; font-weight: bold;">Village Summary</td>
      <td>&nbsp;</td><td>&nbsp;</td>
    </tr>
    <tr>
      <td style="font-size: 18px; font-weight: bold;width: 250px;">Traditional Authority</td><td style="width:5px;">:</td><td><%= @ta %></td>
    </tr>
    <tr>
      <td style="font-size: 18px; font-weight: bold;">Group Village Headman</td><td>:</td><td><%= @gvh%></td>
    </tr>
    <tr>
      <td style="font-size: 18px; font-weight: bold;">Village Headman</td><td>:</td><td><%= @village%></td>
    </tr>
  </table>

</div>

<div style=" height: 500px; overflow: auto;" >

  <table style="width: 100%">
    <tr class="heading" >
      <td colspan="2" style="text-align: center">General Population Statistics</td>
    </tr>
    <tr>
      <td>Total Population</td>
      <td style="text-align: center"><%= @cumulative['count'] %></td>
    </tr>

    <tr class="heading" >
       <td colspan="2" style="text-align: center">Total Population by Gender</td>
    </tr>
    <tr>
       <td>Females</td>
      <td class="count" onclick=" send_to(<%=@cumulative['gender_count_id']['females'].to_json %>,'Total Registered Females', 'gender' )">
        <%= @cumulative['gender_count']['females'] %>
      </td>
    </tr>
    <tr>
      <td>Males</td>
      <td class="count" onclick=" send_to(<%=@cumulative['gender_count_id']['males'].to_json %>,'Total Registered Males', 'gender' )">
        <%= @cumulative['gender_count']['males'] %>
      </td>
    </tr>
    <tr class="heading" >
      <td colspan="2" style="text-align: center">Age Distribution By Age </td>
    </tr>
    <tr>
      <td>0 - < 1</td>
      <td class="count" onclick=" send_to(<%=@cumulative['ages_id']['0 to < 1'].to_json %>,'Registered People Less Than 1 Year Old', 'age' )">
        <%= @cumulative['ages']['0 to < 1'] %>
      </td>
    </tr>
    <tr>
      <td>1 - 4</td>
      <td class="count" onclick=" send_to(<%=@cumulative['ages_id']['1-4'].to_json %>,'Registered People Between 1 and 4 Years Old', 'age' )">
