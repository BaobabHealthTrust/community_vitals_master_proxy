        <td><%= @person.state_province %></td>
        <td><div class="link" onmousedown="goTo('current_district')"><%= Vocabulary.search('Edit') %></div></td>
      </tr>
      <tr>
        <td class="title"><%= Vocabulary.search('Current Traditional Authority') %></td>
        <td><%= @person.address2 %></td>
        <td><div class="link" onmousedown="goTo('current_district')"><%= Vocabulary.search('Edit') %></div></td>
      </tr>
      <tr>
