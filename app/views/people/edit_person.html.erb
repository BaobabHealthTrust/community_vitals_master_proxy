<style>
  td{
      border: 1px solid #000000;
      padding: 5px;
  }
  td.title{
      font-weight: bold;
      width: 45%;
  }
  tr{
      line-height: 250%;
  }
  div.link{
      width: 100%;
      height: 100%;
      background-color: cornflowerblue;
      text-align: center;
      color: #ffffff;
  }
</style>

<div style="margin-left: auto; margin-right: auto; width: 95%;padding-top: 15px;">
    <span style="font-size: 200%;font-weight: bold;"> <%= "#{Vocabulary.search('Demographics for')} " +  @person.name%> </span>
    <table style="width:100%;">
      <tr>
        <td class="title"><%= Vocabulary.search('First Name') %></td>
        <td><%= @person.given_name %></td>
        <td><div class="link" onmousedown="goTo('given_name')"><%= Vocabulary.search('Edit') %></div></td>
      </tr>
      <tr>
        <td class="title"><%= Vocabulary.search('Middle Name') %></td>
        <td><%= @person.middle_name %></td>
        <td><div class="link" onmousedown="goTo('middle_name')"><%= Vocabulary.search('Edit') %></div></td>
      </tr>
      <tr>
        <td class="title"><%= Vocabulary.search('Last Name') %></td>
        <td><%= @person.family_name %></td>
        <td><div class="link" onmousedown="goTo('last_name')"><%= Vocabulary.search('Edit') %></div></td>
      </tr>
      <tr>
        <td class="title"><%= Vocabulary.search('Gender') %></td>
        <td><%= Vocabulary.search(@person.gender) %></td>
        <td><div class="link" onmousedown="goTo('gender')"><%= Vocabulary.search('Edit') %></div></td>
      </tr>
      <tr>
        <td class="title"><%= Vocabulary.search('Date of Birth') %></td>
        <td><%= @person.birthdate %></td>
        <td><div class="link" onmousedown="goTo('dob')"><%= Vocabulary.search('Edit') %></div></td>
      </tr>
      <tr>
        <td class="title"><%= Vocabulary.search('Place of Birth') %></td>
        <td><%= Vocabulary.search(@person.place_of_birth) %></td>
        <td><div class="link" onmousedown="goTo('place_of_birth')"><%= Vocabulary.search('Edit') %></div></td>
      </tr>
      <tr>
