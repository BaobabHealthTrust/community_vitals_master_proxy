<style type="text/css">

  body{
    font-family: "Nimbus Sans L", "Arial Narrow", sans-serif;
    overflow: hidden;
  }

</style>

<table width="100%" style="margin: 0px;" border="0" cellspacing="0">  
  <tr>
    <td style="background-color: #fff; padding: 0px;">
      <div style="background-color: #fff; overflow: auto; padding: 1px; text-align: center;">

        <table width="100%">
          <tr>
            <td rowspan="4" style="vertical-align: top; padding-top: 0px;">
              <table width="100%" cellpadding="5" cellspacing="0">
                <tr>
                  <td align="center" style="border-bottom: 1px dotted #ccc;">
                    <div style="border-radius: 20px; padding: 5px; border: solid 1px #6281A7;
                         width: 30px; height: 30px; text-align: center; vertical-align: middle;">
                         <% if @user.gender.downcase.match(/^m/) %>
                        <img src="/touchscreentoolkit/lib/images/male.gif" alt="M" style="margin: 2px;" />
                      <% elsif @user.gender.downcase.match(/^f/) %>
                        <img src="/touchscreentoolkit/lib/images/female.gif" alt="F" style="margin: 2px;" />
                      <% end %>
                    </div>
                  </td>
                  <td style="font-size: 1.5em; vertical-align: middle; text-align: left;
                      border-bottom: 1px dotted #ccc; border-left: 1px dotted #ccc;">
                      <%= @user.name %>
                  </td>
                </tr>
                <tr>
                  <td style="vertical-align: top; font-size: 1.3em; padding-top: 10px; width: 80px;">
                    Roles:
                  </td>
                  <td style="vertical-align: top; font-size: 1.2em; border-left: 1px dotted #ccc;" align="left">
                    <div style="height: 210px; width: 100%; overflow: auto;">
                      <ul>
                        <% @user.user_roles.each do |role| %>
                          <li style="padding-left: 20px;">
                            <%= role.role %>
                          </li>
                        <% end %>
                      </ul>
                    </div>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>
</table>