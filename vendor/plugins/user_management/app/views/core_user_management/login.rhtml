<script src="/javascripts/jquery-1.3.2.min.js"></script>
<script src="/javascripts/jphotogrid.js"></script>
<script src="/javascripts/bannerNews.js" type="text/javascript"></script>

<script language="javascript">
  tt_cancel_destination = '/login';
  tt_cancel_show = '/login';
  evr_app_url = '<%= @evr_app_url %>';
  function inform() {
    $('infoBar'+tstCurrentPage).innerHTML = "<%= welcome_message %>";
  }

  function changeUrl(){
    bhtNewsBtnLogin = document.getElementById("bhtNewsBtnLogin");
    if (bhtNewsBtnLogin){
      bhtNewsBtnLogin.onmousedown = function(){
        window.location = evr_app_url;
      }
    }
  }

  window.setInterval("changeUrl()", 350);

jQuery('#pg').jphotogrid({
        baseCSS: {
            width: '175px',
            height: '117px',
            padding: '0px'
        },
        selectedCSS: {
            top: '50px',
            left: '100px',
            width: '500px',
            height: '360px',
            padding: '10px'
        }
    });
</script>
<style type="text/css">
  .infoBarClass{
    padding-top: 25px;
  }

  #pg {
    position: relative;
    height: 585px;
    background: #000;
    left: 11%;
    z-index: 9999;
    top: 100px;
    width: 877px;
  }

  #pg li {
    position: relative;
    list-style: none;
    width: 175px;
    height: 117px;
    overflow: hidden;
    float:left;
    z-index: 9991;
    opacity: .3;
  }

  #pg li.active {
    opacity: 1;
  }

  #pg li.selected {
    opacity: 1;
    z-index: 99992;
    -moz-box-shadow: 0px 0px 10px #fff;
    -webkit-box-shadow: 0px 0px 10px #fff; 
  }

  #pg li img {
    display: block;
    width: 100%;
  }

  #pg li p { 
    color: white;
    margin: 10px 0;
    font-size: 12px;
  }

  body, html, ul, li {
    margin: 0;
    padding: 0;
  }

  .thumbs {
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  .thumbs li {
    list-style: none;
    float: left;
    margin: 5px;
    padding: 3px;
    background: #eee;
    -moz-box-shadow: 0 0 4px #444;
    -webkit-box-shadow: 0 0 2px #000;
  }

  .thumbs li img { 
    display: block;
  }

  .thumbs li a img { 
    border: none;
  }

  #cycle { 
    margin: 0;
    padding: 0;
    width: 500px;
    height: 333px;
    padding: 3px;
    background: #eee;
    -moz-box-shadow: 0 0 2px #000;
    -webkit-box-shadow: 0 0 2px #000;
  }

  #cycle li {
    position: relative;
    list-style: none;
    margin: 0;
    padding: 3px;
    width: 500px;
    height: 333px;
    overflow: hidden;
  }

  #cycle li div {
    position: absolute;
    bottom: 3px;
    left: 3px;
    padding: 3px;
    width: 494px;
    background: black;
    color: white;
    font-size: 12px;
    opacity: .8;
  }

  #modalDiv{
    position: absolute;
    background-color: black;
    width: 100%;
    height: 102%;
    left: 0%;
    top: 0%;
    z-index: 9998;
    opacity: 0.5;
  }
</style>

<form id='sessions' action="/authenticate" method='post'>

  <label for="login">Username</label>
  <%= text_field_tag(:login, nil, :helpText => "#{Vocabulary.search("Username")}",
    :textCase => "lower", :field_type => "password",
    :tt_onLoad => "inform(); barcodeId = 'touchscreenInput0';") %><br>

  <label for="password">Password</label>
  <%= password_field_tag(:password, nil, :helpText => "#{Vocabulary.search("Password")}",
    :textCase => "lower", :field_type => "password",
    :tt_onLoad => "inform(); barcodeId = 'touchscreenInput1';") %><br>

  <%= hidden_field_tag "src", "#{params[:src]}" %>

  <%= submit_tag value="Submit"%>
</form>
